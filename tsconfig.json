{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "outDir": "./dist",
    "lib": ["ES2023"],
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}